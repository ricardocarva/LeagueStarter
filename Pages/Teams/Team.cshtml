@page "{id}"
@model TeamModel

@{
  ViewData["Title"] = "Team page";
}

<div class="jumbotron p-2 d-flex justify-content-between">
    <h2 class="display-3"><img src="/image/nfl/logo/@(Model.Team.TeamId).png"> Teams 2019-2020</h2>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Location</th>
            <th scope="col">Name</th>
            <th scope="col">Win</th>
            <th scope="col">Loss</th>
            <th scope="col">Tie</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.Team.Location</th>
            <td>@Model.Team.Name</td>
            <td>@Model.Team.Win</td>
            <td>@Model.Team.Loss</td>
            <td>@Model.Team.Tie</td>
        </tr>            
    </tbody>
</table>
    